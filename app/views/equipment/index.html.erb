<p id="notice"><%= notice %></p>

<h1>Equipment</h1>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Grade de equipamentos</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> Grade de equipamentos
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="row"> 
          <%- @equipment.each do |e| %>
            <%= link_to(e) do %>
              <div class="col-md-2"> 
                    <h1>
                      <span class="glyphicon glyphicon-off " aria-hidden="true">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-desktop fa-stack-1x fa-inverse"></i>
                      </span>
                    </h1>
                <h3><%= e.name %></h3> 
                <% if !e.equipment_histories.last.nil? %>
                  <p><strong>Status: </strong><%= e.equipment_histories.last.status %></p>
                <% else %>
                  <p><strong>Status: </strong>Sem registro</p>
                <% end %>
                <p><strong>Tipo: </strong><%#= e.type.name if !e.type.nil? %></p>
              </div>
            <% end %>
          <% end %>
        </div>  
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>
<br>

<%= link_to 'New Equipment', new_equipment_path %>
