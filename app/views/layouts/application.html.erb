<script>
  $(document).ready(function(){
    $(".push_menu").click(function(){
         $(".wrapper").toggleClass("active");
    });
  });
</script>
<!DOCTYPE html>
<html lang="en">
  <head>
    <%= csrf_meta_tags %>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all' %>

    <title>SAMURAI</title>

  </head>

  <body>
    <div class="container">
    	<div class="row">
    		<div class="wrapper">
      	     <!-- sidebar menu -->
          	    <div class="side-bar">
                    <ul>
                        <li class="menu-head">
                            SAMURAI <a href="#" class="push_menu"><span class="glyphicon glyphicon-align-justify pull-right"></span></a>
                        </li>
                        <div class="menu">
                            <li>
                              <%= link_to dashboard_statistic_path, class: current?(dashboard_statistic_path) do %>
                                 Dashboard <span class="glyphicon glyphicon-dashboard pull-right"></span>
                              <% end %>
                            </li>
                            <li>
                              <%= link_to equipment_index_path, class: current?(equipment_index_path) do %>
                                Grade <span class="glyphicon glyphicon-th pull-right"></span>
                              <% end %>
                            </li>
                            <li>
                              <%= link_to new_equipment_path, class: current?(new_equipment_path) do %>
                                Novo equipamento <span class="glyphicon glyphicon-dashboard pull-right"></span>
                              <% end %>
                            </li>
                            <li>
                              <%= link_to rooms_path, class: current?(rooms_path) do %>
                                Salas <span class="glyphicon glyphicon-dashboard pull-right"></span>
                              <% end %>
                            </li>
                            <li>
                              <%= link_to new_room_path, class: current?(new_room_path) do %>
                                Nova sala <span class="glyphicon glyphicon-dashboard pull-right"></span>
                              <% end %>
                            </li>
                            <li>
                              <%= link_to destroy_user_session_path, :method=>'delete' do %>
                                 Sair <span class="glyphicons glyphicons-exit pull-right"></span>
                              <% end %>
                            </li>
                        </div>
                    </ul>
          	    </div>   
                <div class="content">
                    <div class="col-md-12">
                        <%= yield %>
                    </div>
                </div>
            </div>
          </div>
        </div>
        <!-- /sidebar menu -->
      </div>
    </div>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
